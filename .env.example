# ╔══════════════════════════════════════════════════════════════╗
# ║  EduConnect — Environment Variables                        ║
# ║  Copy to .env and fill in your values                      ║
# ╚══════════════════════════════════════════════════════════════╝

# ─── App ──────────────────────────────────────────────────────
APP_ENV=development
APP_PORT=8080
APP_URL=http://localhost:8080

# ─── PostgreSQL ───────────────────────────────────────────────
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=educonnect
POSTGRES_PASSWORD=educonnect_secret
POSTGRES_DB=educonnect
POSTGRES_SSL_MODE=disable
DATABASE_URL=postgres://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}?sslmode=${POSTGRES_SSL_MODE}

# ─── Redis ────────────────────────────────────────────────────
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=educonnect_redis
REDIS_DB=0

# ─── NATS ─────────────────────────────────────────────────────
NATS_URL=nats://localhost:4222
NATS_USER=educonnect
NATS_PASSWORD=educonnect_nats

# ─── MinIO (S3) ──────────────────────────────────────────────
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=educonnect_minio
MINIO_SECRET_KEY=educonnect_minio_secret
MINIO_USE_SSL=false
MINIO_BUCKET_AVATARS=avatars
MINIO_BUCKET_DOCUMENTS=documents
MINIO_BUCKET_VIDEOS=videos
MINIO_BUCKET_RECORDINGS=recordings

# ─── Meilisearch ─────────────────────────────────────────────
MEILI_HOST=http://localhost:7700
MEILI_MASTER_KEY=educonnect_meili_key

# ─── LiveKit ─────────────────────────────────────────────────
LIVEKIT_HOST=http://localhost:7880
LIVEKIT_API_KEY=devkey
LIVEKIT_API_SECRET=secret_that_is_at_least_32_characters_long

# ─── JWT ──────────────────────────────────────────────────────
JWT_SECRET=your_jwt_secret_key_change_in_production
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=720h

# ─── SMS (ICOSNET / Twilio fallback) ─────────────────────────
SMS_PROVIDER=icosnet
ICOSNET_API_KEY=
ICOSNET_API_SECRET=
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_FROM_NUMBER=

# ─── Firebase (Push Notifications) ───────────────────────────
FIREBASE_CREDENTIALS_FILE=./firebase-service-account.json

# ─── Payment (Algérie Poste) ─────────────────────────────────
PAYMENT_CCP_API_URL=
PAYMENT_CCP_MERCHANT_ID=
PAYMENT_CCP_SECRET_KEY=
PAYMENT_EDAHABIA_API_URL=
PAYMENT_EDAHABIA_MERCHANT_ID=
PAYMENT_EDAHABIA_SECRET_KEY=

# ─── Platform ────────────────────────────────────────────────
PLATFORM_COMMISSION_RATE=0.20
PLATFORM_DEFAULT_LANGUAGE=fr
